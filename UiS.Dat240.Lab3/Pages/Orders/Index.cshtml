@page
@model Lab3.Pages.OrdersModel

<div class="text-center">

    <h1 class="display-4">Orders</h1>
    <div class="text-left">
        @if (Model.Orders is not null)
        {
            <table class="table  table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Customer</th>
                        <th scope="col">DateTime</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Customer.Name</td>
                            <td>@order.Date</td>
                            <td><a class="btn btn-primary" asp-page="Order" asp-route-id="@order.Id">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div>
                <p>There are no orders placed at the moment</p>
            </div>
        }
    </div>
</div>
