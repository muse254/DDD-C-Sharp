@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<form method="post">
<div class="text-center">
    <h1 class="display-4 mt-5">Menu</h1>

    @for (int index = 1; index <= 3; index++)
    {
        <div class="menu">
            <img src="~/img/Menu0@(index).png" />

            <ul>
                @foreach (var item in Model.FoodItems.Skip((index - 1) * 8).Take(8))
                {

                    <li>
                        <div class="header">
                            <h2>@item.Name</h2>
                            <p class="price">Kr @string.Format("{0:#0.00}",item.Price)</p>
                        </div>
                        <div class="body">
                            <div>

                                <p class="text">@item.Description</p>
                                <p class="cooking-time">@item.CookTime min</p>
                            </div>
                            <button type="submit" asp-page-handler="AddToCart"
                                asp-route-id="@item.Id"
                                asp-route-name="@item.Name"
                                asp-route-price="@item.Price.ToString("0..00")"
                                  ><img src="~/img/addToCart.svg" height="20" width="20">
                            </button>
                            
                        </div>
                    </li>
                }
            </ul>
        </div>
    }


</div>
</form>
